
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

@model News_Project.UI.Areas.Admin.Data.DTO.AppUserDTO

    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-danger">
                    <div class="box-header">
                        <h4>Update AppUser</h4>
                    </div>
                    <div class="box-body">
                        <form action="/Admin/AppUser/Update" method="post" role="form">
                            <input type="text" style="visibility:hidden" name="Id" value="@Model.Id" />
                            <div class="form-group">
                                <label for="FirstName">First Name</label>
                                <input type="text" name="FirstName" value="@Model.FirstName" class="form-control" placeholder="FirstName" />
                            </div>
                            <div class="form-group">
                                <label for="LastName">Last Name</label>
                                <input type="text" name="LastName" value="@Model.LastName" class="form-control" placeholder="LastName " />
                            </div>
                            <div class="form-group">
                                <label for="UserName">User Name</label>
                                <input type="text" name="UserName" value="@Model.UserName" class="form-control" placeholder="UserName" />
                            </div>
                            <div class="form-group">
                                <label for="Password">Password</label>
                                <input type="text" name="Password" value="@Model.Password" class="form-control" placeholder="Password" />
                            </div>
                            <div class="form-group">
                                <label for="Role">Choose a role:</label>
                                <select name="Role" value="@Model.Role" class="form-control">
                                    @foreach (var item in Enum.GetNames(typeof(News_Project.Entity.Entities.Enums.Role)))
                                    {
                                        <option value="@item">@item</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="Gender">Choose a Gender:</label>
                                <select name="Gender" value="@Model.Gender" class="form-control">
                                    @foreach (var item in Enum.GetNames(typeof(News_Project.Entity.Entities.Enums.Gender)))
                                    {
                                        <option value="@item">@item</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="Image">Choose a Profile Image:</label>
                                <input type="file" value="@Model.XSmallUserImage" name="XSmallUserImage" class="form-control" />
                            </div>
                            <input type="text" style="visibility:hidden" name="Id" value="@Model.Id" />
                            <div class="form-group" style="float:right">
                                <button type="submit" class="btn btn-danger">Submit</button>
                            </div>

                        </form>
                    </div>
                    <div class="box-footer">
                        <a href="/Admin/AppUser/List" class="btn btn-block btn-warning">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </section>